namespace :data do
  desc "Initial data setup - Run once on fresh deployment to populate all data"
  task initialize: :environment do
    puts "üöÄ Starting initial data population..."
    puts "=" * 60
    puts "This will take approximately 3-4 minutes."
    puts "=" * 60

    start_time = Time.current
    errors = []

    # Step 1: Population data (REQUIRED FIRST)
    puts "\nüìä Step 1/9: Fetching population data..."
    puts "   ‚Üí This is required for weighted calculations"
    begin
      Rake::Task["data:fetch_population"].invoke
      puts "   ‚úÖ Population data loaded"
    rescue => e
      error_msg = "Population fetch failed: #{e.message}"
      errors << error_msg
      puts "   ‚ùå #{error_msg}"
    end

    # Step 2: GDP data
    puts "\nüí∞ Step 2/9: Fetching GDP data..."
    begin
      OwidMetricImporter.import_category([ "gdp_per_capita_ppp" ], verbose: false)
      puts "   ‚úÖ GDP data loaded"
    rescue => e
      error_msg = "GDP fetch failed: #{e.message}"
      errors << error_msg
      puts "   ‚ùå #{error_msg}"
    end

    # Step 3: Development metrics
    puts "\nüìà Step 3/9: Fetching development metrics..."
    begin
      # Use the new OWID importer for configured metrics
      OwidMetricImporter.import_category([ "child_mortality_rate", "electricity_access" ], verbose: false)
      puts "   ‚úÖ Development metrics loaded"
    rescue => e
      error_msg = "Development metrics fetch failed: #{e.message}"
      errors << error_msg
      puts "   ‚ùå #{error_msg}"
    end

    # Step 4: Health and social metrics
    puts "\nüè• Step 4/9: Fetching health and social metrics..."
    begin
      # Use the new OWID importer for configured metrics
      OwidMetricImporter.import_category([ "health_expenditure_gdp_percent", "life_satisfaction" ], verbose: false)
      puts "   ‚úÖ Health and social metrics loaded"
    rescue => e
      error_msg = "Health/social metrics fetch failed: #{e.message}"
      errors << error_msg
      puts "   ‚ùå #{error_msg}"
    end

    # Step 5: Calculate Europe population aggregate
    puts "\nüá™üá∫ Step 5/9: Calculating Europe population aggregate..."
    begin
      # Delete old Europe population records to ensure fresh calculation
      old_count = Metric.where(metric_name: "population", country: "europe").delete_all
      puts "   ‚Üí Deleted #{old_count} old Europe population records" if old_count > 0
      
      Rake::Task["data:calculate_europe_population"].invoke
      puts "   ‚úÖ Europe population aggregate calculated"
    rescue => e
      error_msg = "Europe population calculation failed: #{e.message}"
      errors << error_msg
      puts "   ‚ùå #{error_msg}"
    end

    # Step 6: Calculate Europe GDP aggregate
    puts "\nüí∂ Step 6/9: Calculating Europe GDP aggregate..."
    begin
      # Delete old Europe GDP records to ensure fresh calculation
      old_count = Metric.where(metric_name: "gdp_per_capita_ppp", country: "europe").delete_all
      puts "   ‚Üí Deleted #{old_count} old Europe GDP records" if old_count > 0
      
      EuropeanMetricsService.calculate_europe_aggregate(
        "gdp_per_capita_ppp",
        start_year: 1990,
        end_year: 2024
      )
      puts "   ‚úÖ Europe GDP aggregate calculated"
    rescue => e
      error_msg = "Europe GDP calculation failed: #{e.message}"
      errors << error_msg
      puts "   ‚ùå #{error_msg}"
    end

    # Step 6.5: Calculate EU-27 aggregates
    puts "\nüá™üá∫ Step 6.5/9: Calculating EU-27 aggregates..."
    [ "population", "gdp_per_capita_ppp", "child_mortality_rate", "electricity_access" ].each do |metric_name|
      begin
        print "   ‚Ä¢ #{metric_name.humanize}... "
        # Delete old EU-27 records to ensure fresh calculation
        Metric.where(metric_name: metric_name, country: "european_union").delete_all
        
        EuropeanMetricsService.calculate_group_aggregate(
          metric_name,
          country_keys: EuropeanMetricsService::EU27_COUNTRIES,
          target_key: "european_union"
        )
        puts "‚úÖ"
      rescue => e
        puts "‚ùå"
        errors << "EU-27 #{metric_name}: #{e.message}"
      end
    end

    # Step 7: Normalize units
    puts "\nüîß Step 7/9: Normalizing units..."
    begin
      Rake::Task["data:normalize_units"].invoke
      puts "   ‚úÖ Units normalized"
    rescue => e
      error_msg = "Unit normalization failed: #{e.message}"
      errors << error_msg
      puts "   ‚ùå #{error_msg}"
    end

    # Step 8: Enrich descriptions
    puts "\nüìù Step 8/9: Enriching descriptions..."
    begin
      Rake::Task["data:enrich_aggregate_descriptions"].invoke
      puts "   ‚úÖ Descriptions enriched"
    rescue => e
      error_msg = "Description enrichment failed: #{e.message}"
      errors << error_msg
      puts "   ‚ùå #{error_msg}"
    end

    # Step 9: Verification
    puts "\n‚úÖ Step 9/9: Final verification..."
    begin
      total_metrics = Metric.count
      health_exp_count = Metric.where(metric_name: "health_expenditure_gdp_percent").count
      life_sat_count = Metric.where(metric_name: "life_satisfaction").count
      puts "   ‚Üí Total metrics: #{total_metrics}"
      puts "   ‚Üí Health expenditure records: #{health_exp_count}"
      puts "   ‚Üí Life satisfaction records: #{life_sat_count}"
      puts "   ‚úÖ Verification complete"
    rescue => e
      error_msg = "Verification failed: #{e.message}"
      errors << error_msg
      puts "   ‚ùå #{error_msg}"
    end

    # Summary
    end_time = Time.current
    duration = (end_time - start_time).round(2)

    puts "\n" + "=" * 60
    if errors.empty?
      puts "‚úÖ INITIALIZATION COMPLETE!"
      puts "=" * 60
      puts "‚è±Ô∏è  Time taken: #{duration} seconds"

      # Show data summary
      puts "\nüìä Data Summary:"
      puts "   ‚Ä¢ Population records: #{Metric.for_metric('population').count}"
      puts "   ‚Ä¢ GDP records: #{Metric.for_metric('gdp_per_capita_ppp').count}"
      puts "   ‚Ä¢ Child mortality records: #{Metric.for_metric('child_mortality_rate').count}"
      puts "   ‚Ä¢ Electricity access records: #{Metric.for_metric('electricity_access').count}"
      puts "   ‚Ä¢ Total metrics: #{Metric.count}"
      puts "   ‚Ä¢ Countries covered: #{Metric.distinct.count(:country)}"

      puts "\nüéâ Your application is ready to use!"
      puts "   Visit your app to see the statistics in action."
    else
      puts "‚ö†Ô∏è  INITIALIZATION COMPLETED WITH ERRORS"
      puts "=" * 60
      puts "‚è±Ô∏è  Time taken: #{duration} seconds"
      puts "\n‚ùå Errors encountered:"
      errors.each_with_index do |error, i|
        puts "   #{i + 1}. #{error}"
      end
      puts "\nüí° Please review the errors above and fix any issues."
      puts "   You can re-run this task to retry failed steps."
    end
    puts "=" * 60
  end

  desc "Update data - Run after adding new statistics or to refresh existing data"
  task update: :environment do
    puts "üîÑ Starting data update..."
    puts "=" * 60
    puts "This will fetch the latest data and recalculate aggregates."
    puts "=" * 60

    start_time = Time.current
    errors = []

    # Step 1: Fetch all data sources
    puts "\nüìä Step 1/4: Fetching latest data from all sources..."

    # Population (always update first)
    print "   ‚Ä¢ Population data... "
    begin
      Rake::Task["data:fetch_population"].reenable
      Rake::Task["data:fetch_population"].invoke
      puts "‚úÖ"
    rescue => e
      puts "‚ùå"
      errors << "Population: #{e.message}"
    end

    # GDP
    print "   ‚Ä¢ GDP data... "
    begin
      OwidMetricImporter.import_category([ "gdp_per_capita_ppp" ], verbose: false)
      puts "‚úÖ"
    rescue => e
      puts "‚ùå"
      errors << "GDP: #{e.message}"
    end

    # Development metrics
    print "   ‚Ä¢ Development metrics... "
    begin
      Rake::Task["data:fetch_development"].reenable
      Rake::Task["data:fetch_development"].invoke
      puts "‚úÖ"
    rescue => e
      puts "‚ùå"
      errors << "Development metrics: #{e.message}"
    end

    # Health and social metrics
    print "   ‚Ä¢ Health and social metrics... "
    begin
      Rake::Task["health_social_data:fetch_all"].reenable
      Rake::Task["health_social_data:fetch_all"].invoke
      puts "‚úÖ"
    rescue => e
      puts "‚ùå"
      errors << "Health/social metrics: #{e.message}"
    end

    # Step 2: Recalculate all Europe aggregates
    puts "\nüá™üá∫ Step 2/4: Recalculating Europe aggregates..."

    metrics_to_aggregate = [
      "population",
      "gdp_per_capita_ppp",
      "child_mortality_rate",
      "electricity_access",
      "health_expenditure_gdp_percent",
      "life_satisfaction"
    ]

    metrics_to_aggregate.each do |metric_name|
      print "   ‚Ä¢ #{metric_name.humanize}... "
      begin
        # Delete old Europe records to ensure fresh calculation
        Metric.where(metric_name: metric_name, country: "europe").delete_all
        
        EuropeanMetricsService.calculate_europe_aggregate(metric_name)
        puts "‚úÖ"
      rescue => e
        puts "‚ùå"
        errors << "Europe aggregate for #{metric_name}: #{e.message}"
      end
    end

    # Step 3: Recalculate EU-27 aggregates
    puts "\nüá™üá∫ Step 3/4: Recalculating EU-27 aggregates..."

    metrics_to_aggregate.each do |metric_name|
      print "   ‚Ä¢ #{metric_name.humanize}... "
      begin
        # Delete old EU-27 records to ensure fresh calculation
        Metric.where(metric_name: metric_name, country: "european_union").delete_all
        
        EuropeanMetricsService.calculate_group_aggregate(
          metric_name,
          country_keys: EuropeanMetricsService::EU27_COUNTRIES,
          target_key: "european_union"
        )
        puts "‚úÖ"
      rescue => e
        puts "‚ùå"
        errors << "EU-27 aggregate for #{metric_name}: #{e.message}"
      end
    end

    # Step 4: Normalize and enrich
    puts "\nüîß Step 4/4: Normalizing units and enriching descriptions..."

    print "   ‚Ä¢ Normalizing units... "
    begin
      Rake::Task["data:normalize_units"].reenable
      Rake::Task["data:normalize_units"].invoke
      puts "‚úÖ"
    rescue => e
      puts "‚ùå"
      errors << "Unit normalization: #{e.message}"
    end

    print "   ‚Ä¢ Enriching descriptions... "
    begin
      Rake::Task["data:enrich_aggregate_descriptions"].reenable
      Rake::Task["data:enrich_aggregate_descriptions"].invoke
      puts "‚úÖ"
    rescue => e
      puts "‚ùå"
      errors << "Description enrichment: #{e.message}"
    end

    # Summary
    end_time = Time.current
    duration = (end_time - start_time).round(2)

    puts "\n" + "=" * 60
    if errors.empty?
      puts "‚úÖ DATA UPDATE COMPLETE!"
      puts "=" * 60
      puts "‚è±Ô∏è  Time taken: #{duration} seconds"

      # Show updated summary
      puts "\nüìä Updated Data Summary:"
      puts "   ‚Ä¢ Population records: #{Metric.for_metric('population').count}"
      puts "   ‚Ä¢ GDP records: #{Metric.for_metric('gdp_per_capita_ppp').count}"
      puts "   ‚Ä¢ Child mortality records: #{Metric.for_metric('child_mortality_rate').count}"
      puts "   ‚Ä¢ Electricity access records: #{Metric.for_metric('electricity_access').count}"
      puts "   ‚Ä¢ Total metrics: #{Metric.count}"
      puts "   ‚Ä¢ Countries covered: #{Metric.distinct.count(:country)}"
      puts "   ‚Ä¢ Latest update: #{Metric.maximum(:updated_at)&.strftime('%Y-%m-%d %H:%M:%S')}"

      puts "\nüéâ All data is up to date!"
    else
      puts "‚ö†Ô∏è  DATA UPDATE COMPLETED WITH ERRORS"
      puts "=" * 60
      puts "‚è±Ô∏è  Time taken: #{duration} seconds"
      puts "\n‚ùå Errors encountered:"
      errors.each_with_index do |error, i|
        puts "   #{i + 1}. #{error}"
      end
      puts "\nüí° Please review the errors above and fix any issues."
    end
    puts "=" * 60
  end
end
