<div class="max-w-7xl mx-auto px-6">
  <!-- Hero Section -->
  <section class="border-b-2 border-black py-16">
    <h1 class="text-6xl md:text-8xl font-black tracking-tighter mb-6">
      STATISTICAL<br>
      <span class="text-[#0066FF]">COMPARISONS</span>
    </h1>
    <p class="text-xl text-black/70 max-w-2xl">
      Comprehensive data comparing European performance with the United States, India, and China across key metrics.
    </p>
  </section>

  <!-- Category Quick Links -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-0 border-b-2 border-black">
    <% ['economy','development','environment','innovation'].each_with_index do |cat, index| %>
      <%= link_to "#category-#{cat}", class: "block p-6 border-r-2 border-black #{'border-r-0' if index == 3} hover:bg-[#F5F5F5] transition-colors group" do %>
        <span class="block font-mono text-3xl font-bold text-black/20 group-hover:text-[#0066FF] transition-colors mb-2">0<%= index + 1 %></span>
        <span class="block font-mono text-sm uppercase tracking-brutal"><%= cat.humanize %></span>
      <% end %>
    <% end %>
  </div>

  <% if @statistics.any? %>

    <% @statistics.each do |category, stats| %>
      <section id="category-<%= category %>" class="py-16 scroll-mt-24">
        <div class="flex items-center gap-6 mb-12 border-b-2 border-black pb-6">
          <span class="font-mono text-xs uppercase tracking-brutal text-black/60"><%= category.humanize %></span>
          <div class="flex-1 h-px bg-black/20"></div>
          <span class="font-mono text-xs text-black/40"><%= stats.size %> metrics</span>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-0">
          <% stats.each_with_index do |stat, index| %>
            <div class="border-2 border-black p-6 <%= index > 0 ? 'border-l-0' : '' %> <%= index >= 3 ? 'border-t-0' : '' %> hover:bg-[#F5F5F5] transition-colors group">
              <div class="flex items-start justify-between mb-6">
                <h3 class="font-mono text-sm uppercase tracking-brutal font-bold"><%= stat.metric %></h3>
                <span class="font-mono text-xs bg-black text-white px-2 py-1">
                  <%= stat.year %>
                </span>
              </div>
              
              <!-- Europe Value (featured) -->
              <div class="mb-6 border-l-2 border-[#0066FF] pl-4">
                <div class="font-mono text-xs text-black/50 mb-1">EUR</div>
                <div class="font-mono text-3xl font-bold text-[#0066FF]">
                  <% if stat.europe_value.present? %>
                    <%= format_value_with_unit(stat.europe_value, stat.unit, decimals: 2) %>
                  <% else %>
                    <span class="text-black/30">—</span>
                  <% end %>
                </div>
              </div>
              
              <!-- Comparisons -->
              <div class="space-y-2 border-t border-black pt-4">
                <% if stat.us_value.present? %>
                  <div class="flex justify-between items-center font-mono text-sm">
                    <span class="text-black/60">USA</span>
                    <span><%= format_value_with_unit(stat.us_value, stat.unit, decimals: 2) %></span>
                  </div>
                <% end %>
                <% if stat.india_value.present? %>
                  <div class="flex justify-between items-center font-mono text-sm">
                    <span class="text-black/60">IND</span>
                    <span><%= format_value_with_unit(stat.india_value, stat.unit, decimals: 2) %></span>
                  </div>
                <% end %>
                <% if stat.china_value.present? %>
                  <div class="flex justify-between items-center font-mono text-sm">
                    <span class="text-black/60">CHN</span>
                    <span><%= format_value_with_unit(stat.china_value, stat.unit, decimals: 2) %></span>
                  </div>
                <% end %>
              </div>
              
              <% if stat.description.present? %>
                <p class="text-xs text-black/50 mt-4 pt-4 border-t border-black/10">
                  <%= truncate(stat.description, length: 100) %>
                </p>
              <% end %>
              
              <div class="mt-6 flex items-center justify-between">
                <%= link_to statistic_path(stat.id), class: "font-mono text-xs uppercase tracking-brutal underline underline-offset-4 hover:text-[#0066FF] transition-colors" do %>
                  Details →
                <% end %>
                <% if stat.source.present? %>
                  <span class="font-mono text-xs text-black/30">
                    <%= truncate(stat.source, length: 20) %>
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </section>
    <% end %>
  <% else %>
    <section class="py-20 text-center">
      <div class="font-mono text-8xl font-bold text-black/10 mb-8">∅</div>
      <h3 class="font-mono text-xl uppercase tracking-brutal mb-4">No Statistics Available</h3>
      <p class="text-black/60 mb-8 max-w-md mx-auto">Statistics data will be added soon. Check back later for comprehensive comparisons.</p>
      <%= link_to "Return Home", root_path, class: "inline-flex items-center gap-4 bg-black text-white px-8 py-4 font-mono text-sm uppercase tracking-brutal hover:bg-[#0066FF] transition-colors" %>
    </section>
  <% end %>

  <!-- Europe Calculation Methodology -->
  <%= render 'shared/europe_calculation_methodology', compact_view: true %>

  <!-- Call to Action -->
  <section class="border-t-2 border-black py-16">
    <div class="max-w-2xl mx-auto text-center">
      <h3 class="font-mono text-2xl uppercase tracking-brutal mb-4">Help Us Expand</h3>
      <p class="text-black/60 mb-8">
        EuropeVersus is open source. Contribute verified statistics from reputable sources.
      </p>
      <%= link_to contribute_path, class: "inline-flex items-center gap-4 bg-black text-white px-8 py-4 font-mono text-sm uppercase tracking-brutal hover:bg-[#0066FF] transition-colors" do %>
        Contribute Data
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
      <% end %>
    </div>
  </section>
</div>
