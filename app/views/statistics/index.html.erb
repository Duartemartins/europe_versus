<div class="max-w-7xl mx-auto">
  <!-- Modern Hero Section -->
  <div class="relative text-center mb-16">
    <div class="absolute inset-0 bg-gradient-to-r from-blue-600/10 via-indigo-600/10 to-purple-600/10 rounded-3xl transform -skew-y-1"></div>
    <div class="relative py-16 px-8">
      <h1 class="text-5xl md:text-6xl font-black mb-6 bg-gradient-to-r from-slate-900 via-blue-900 to-indigo-900 bg-clip-text text-transparent">Statistical Comparisons</h1>
      <p class="text-xl md:text-2xl text-slate-600 max-w-3xl mx-auto leading-relaxed font-light">
        Comprehensive data comparing European performance with the United States, India, and China across key metrics.
      </p>
    </div>
    
    <!-- Floating elements -->
    <div class="absolute top-10 left-10 w-16 h-16 bg-blue-200 rounded-full opacity-20 animate-bounce" style="animation-delay: 0s;"></div>
    <div class="absolute top-20 right-20 w-12 h-12 bg-indigo-200 rounded-full opacity-20 animate-bounce" style="animation-delay: 2s;"></div>
  </div>

  <!-- Category Quick Links -->
  <div class="grid md:grid-cols-4 gap-4 mb-16">
    <% ['economy','development','environment','innovation'].each do |cat| %>
      <%= link_to "#category-#{cat}", class: "block text-center bg-white/90 rounded-2xl border border-white/40 shadow hover:shadow-lg transition-all p-4 hover:-translate-y-1" do %>
        <span class="block text-lg font-semibold capitalize"><%= cat.humanize %></span>
        <span class="block text-slate-500 text-sm">Jump to section</span>
      <% end %>
    <% end %>
  </div>

  <% if @statistics.any? %>

    <% @statistics.each do |category, stats| %>
      <section id="category-<%= category %>" class="mb-20 scroll-mt-24">
        <div class="flex items-center mb-10">
          <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-2xl flex items-center justify-center mr-4 shadow-lg">
            <% case category %>
            <% when 'economy' %>
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
              </svg>
            <% when 'social' %>
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            <% when 'environment' %>
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064"></path>
              </svg>
            <% when 'innovation' %>
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            <% else %>
              <span class="text-white font-bold">ðŸ“Š</span>
            <% end %>
          </div>
          <h2 class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-slate-900 to-slate-700 bg-clip-text text-transparent capitalize"><%= category.humanize %></h2>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <% stats.each do |stat| %>
            <div class="group relative backdrop-blur-sm bg-white/80 rounded-3xl border border-white/20 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 p-8">
              <div class="absolute inset-0 bg-gradient-to-br from-blue-50/30 to-indigo-50/30 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              <div class="relative">
                <div class="flex items-center justify-between mb-6">
                  <h3 class="text-xl font-bold text-slate-800"><%= stat.metric %></h3>
                  <span class="text-sm font-medium text-white bg-gradient-to-r from-blue-500 to-indigo-600 px-3 py-1 rounded-full shadow-sm">
                    <%= stat.year %>
                  </span>
                </div>
                
                <div class="space-y-4">
                  <div class="flex justify-between items-center p-4 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-2xl border border-blue-100/50">
                    <span class="text-sm font-medium text-slate-700">ðŸ‡ªðŸ‡º Europe</span>
                    <span class="font-bold text-blue-600 text-lg"><%= format_value_with_unit(stat.europe_value, stat.unit, decimals: 2) %></span>
                  </div>
                  
                  <div class="space-y-3">
                    <div class="flex justify-between items-center p-2 rounded-xl hover:bg-gray-50/80 transition-colors">
                      <span class="text-sm text-slate-600">ðŸ‡ºðŸ‡¸ United States</span>
                      <span class="font-semibold text-slate-700"><%= format_value_with_unit(stat.us_value, stat.unit, decimals: 2) %></span>
                    </div>
                    
                    <div class="flex justify-between items-center p-2 rounded-xl hover:bg-gray-50/80 transition-colors">
                      <span class="text-sm text-slate-600">ðŸ‡®ðŸ‡³ India</span>
                      <span class="font-semibold text-slate-700"><%= format_value_with_unit(stat.india_value, stat.unit, decimals: 2) %></span>
                    </div>
                    
                    <div class="flex justify-between items-center p-2 rounded-xl hover:bg-gray-50/80 transition-colors">
                      <span class="text-sm text-slate-600">ðŸ‡¨ðŸ‡³ China</span>
                      <span class="font-semibold text-slate-700"><%= format_value_with_unit(stat.china_value, stat.unit, decimals: 2) %></span>
                    </div>
                  </div>
                </div>
                
                <% if stat.description.present? %>
                  <p class="text-sm text-slate-500 mt-6 pt-4 border-t border-gray-200/50 leading-relaxed">
                    <%= truncate(stat.description, length: 120) %>
                  </p>
                <% end %>
                
                <div class="mt-6 pt-4 border-t border-gray-200/50 flex items-center justify-between">
                  <%= link_to statistic_path(stat.id),
                      class: "inline-flex items-center text-blue-600 hover:text-blue-800 font-semibold transition-colors group" do %>
                    View Details
                    <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  <% end %>
                  <% if stat.source.present? %>
                    <span class="text-slate-400 text-xs">
                      <%= truncate(stat.source, length: 25) %>
                    </span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </section>
    <% end %>
  <% else %>
    <div class="text-center py-20">
      <div class="w-24 h-24 bg-gradient-to-r from-blue-100 to-indigo-100 rounded-3xl flex items-center justify-center mx-auto mb-8 shadow-lg">
        <svg class="w-12 h-12 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
      </div>
      <h3 class="text-2xl font-bold text-slate-800 mb-4">No Statistics Available</h3>
      <p class="text-xl text-slate-600 mb-8 max-w-2xl mx-auto">Statistics data will be added soon. Check back later for comprehensive comparisons.</p>
      <%= link_to "Return Home", root_path, 
          class: "inline-flex items-center bg-gradient-to-r from-blue-600 to-indigo-600 text-white px-8 py-4 rounded-2xl font-semibold hover:from-blue-700 hover:to-indigo-700 transition-all duration-300 shadow-xl hover:shadow-2xl transform hover:-translate-y-1" %>
    </div>
  <% end %>

  <!-- Europe Calculation Methodology -->
  <%= render 'shared/europe_calculation_methodology', compact_view: true, bg_color: 'blue' %>

  <!-- Call to Action -->
  <div class="text-center mt-16 p-8 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-3xl">
    <h3 class="text-2xl font-bold text-slate-800 mb-4">Help Us Expand This Database</h3>
    <p class="text-slate-600 mb-6 max-w-2xl mx-auto">
      EuropeVersus is an open source project. Contribute verified statistics from reputable sources to help build a comprehensive comparison database.
    </p>
    <%= link_to contribute_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-semibold rounded-xl hover:from-blue-700 hover:to-indigo-700 transition-all duration-200 shadow-lg hover:shadow-xl" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
      </svg>
      Contribute Data
    <% end %>
  </div>
</div>
