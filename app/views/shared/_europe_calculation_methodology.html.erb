<% show_current_values = local_assigns.fetch(:show_current_values, true); compact_view = local_assigns.fetch(:compact_view, false); bg_color = local_assigns.fetch(:bg_color, 'emerald'); section_bg = bg_color == 'blue' ? 'bg-gradient-to-r from-blue-50 to-indigo-50' : (bg_color == 'purple' ? 'bg-gradient-to-r from-purple-50 to-indigo-50' : (bg_color == 'slate' ? 'bg-gradient-to-r from-slate-50 to-gray-50' : 'bg-gradient-to-r from-emerald-50 to-green-50')); section_border = bg_color == 'blue' ? 'border-blue-100/50' : (bg_color == 'purple' ? 'border-purple-100/50' : (bg_color == 'slate' ? 'border-slate-100/50' : 'border-emerald-100/50')); title_gradient = bg_color == 'blue' ? 'bg-gradient-to-r from-slate-800 to-blue-700' : (bg_color == 'purple' ? 'bg-gradient-to-r from-slate-800 to-purple-700' : (bg_color == 'slate' ? 'bg-gradient-to-r from-slate-800 to-slate-600' : 'bg-gradient-to-r from-slate-800 to-emerald-700')); icon_bg = bg_color == 'blue' ? 'from-blue-500 to-indigo-600' : (bg_color == 'purple' ? 'from-purple-500 to-indigo-600' : (bg_color == 'slate' ? 'from-slate-500 to-gray-600' : 'from-emerald-500 to-green-600')); card_bg = bg_color == 'blue' ? 'bg-blue-50' : (bg_color == 'purple' ? 'bg-purple-50' : (bg_color == 'slate' ? 'bg-slate-50' : 'bg-emerald-50')); card_border = bg_color == 'blue' ? 'border-blue-100' : (bg_color == 'purple' ? 'border-purple-100' : (bg_color == 'slate' ? 'border-slate-100' : 'border-emerald-100')); nil %>
<section class="<%= compact_view ? 'mb-12' : 'mb-20' %>">
  <div class="backdrop-blur-sm <%= section_bg %> <%= compact_view ? 'py-12' : 'py-20' %> rounded-3xl border <%= section_border %> shadow-lg">
    <div class="max-w-6xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="<%= compact_view ? 'text-3xl' : 'text-4xl' %> font-bold mb-4 <%= title_gradient %> bg-clip-text text-transparent">
          How Europe Totals Are Calculated
        </h2>
        <p class="<%= compact_view ? 'text-lg' : 'text-xl' %> text-slate-600 max-w-3xl mx-auto">
          Transparent, <%= compact_view ? 'accurate' : 'population-weighted' %> calculations for fair comparisons
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-8 mb-8">
        <!-- Population Calculation -->
        <div class="backdrop-blur-sm bg-white/70 p-8 rounded-3xl shadow-lg border border-white/20 flex flex-col">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 bg-gradient-to-r <%= icon_bg %> rounded-2xl flex items-center justify-center mr-4 shadow-lg">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-slate-800">üåç Population</h3>
          </div>
          <div class="space-y-4 flex-grow">
            <p class="text-slate-600 font-medium">Europe includes all <%= compact_view ? '49' : '49 European' %> countries:</p>
            <ul class="text-slate-600 space-y-2 text-sm">
              <li>‚Ä¢ <strong>27 EU member states:</strong> Germany, France, Italy, etc.</li>
              <% unless compact_view %>
                <li>‚Ä¢ <strong>Non-EU European countries:</strong> UK, Switzerland, Norway, Ukraine, etc.</li>
                <li>‚Ä¢ <strong>Transcontinental countries:</strong> Russia and Turkey</li>
                <li>‚Ä¢ <strong>Small states:</strong> Monaco, Andorra, San Marino, Vatican, etc.</li>
              <% else %>
                <li>‚Ä¢ <strong>Other European countries:</strong> UK, Switzerland, Norway, etc.</li>
              <% end %>
            </ul>
          </div>
            <% if show_current_values %>
              <% 
                begin
                  population_data = PopulationDataService.latest_population_for_countries(['europe'])
                  if population_data && population_data['europe']
              %>
                <div class="mt-4 p-3 <%= card_bg %> rounded-xl border <%= card_border %>">
                  <p class="text-sm text-slate-700 text-center">
                    <strong>Current Total:</strong> 
                    <%= number_with_delimiter(population_data['europe'][:value].to_i / 1_000_000) %>M people
                    (<%= population_data['europe'][:year] %>)
                  </p>
                </div>
              <% 
                  end
                rescue => e
                  # Silently fail if data not available
                end
              %>
            <% end %>
        </div>
        
        <!-- GDP Calculation -->
        <div class="backdrop-blur-sm bg-white/70 p-8 rounded-3xl shadow-lg border border-white/20 flex flex-col">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 bg-gradient-to-r <%= icon_bg %> rounded-2xl flex items-center justify-center mr-4 shadow-lg">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-slate-800">üí∞ GDP per Capita <span class="text-lg font-normal text-slate-500">(example)</span></h3>
          </div>
          <div class="space-y-4 flex-grow">
            <p class="text-slate-600 font-medium">Population-weighted calculation <%= compact_view ? '' : '(applies to all per-capita metrics)' %>:</p>
            <ul class="text-slate-600 space-y-2 text-sm">
              <li>‚Ä¢ <strong>Step 1:</strong> GDP per capita √ó <%= compact_view ? 'population' : 'European population' %> = total GDP <% unless compact_view %>(per country)<% end %></li>
              <li>‚Ä¢ <strong>Step 2:</strong> Sum all <%= compact_view ? "countries'" : "European countries'" %> total GDP</li>
              <li>‚Ä¢ <strong>Step 3:</strong> Divide by total <%= compact_view ? 'population' : 'European population' %></li>
              <% unless compact_view %>
                <li>‚Ä¢ <strong>Includes 49 European countries</strong> with GDP data (98% coverage)</li>
                <li>‚Ä¢ <strong>Uses European portions</strong> of transcontinental countries</li>
              <% else %>
                <li>‚Ä¢ <strong>49 countries</strong> with 98% data coverage</li>
              <% end %>
            </ul>
          </div>
            <% if show_current_values %>
              <% 
                begin
                  gdp_data = EuropeanMetricsService.latest_metric_for_countries('gdp_per_capita_ppp', ['europe'])
                  if gdp_data && gdp_data['europe']
              %>
                <div class="mt-4 p-3 <%= card_bg %> rounded-xl border <%= card_border %>">
                  <p class="text-sm text-slate-700 text-center">
                    <strong>Current GDP per capita PPP:</strong> 
                    $<%= number_with_delimiter(gdp_data['europe'][:value].to_i) %>
                    (<%= gdp_data['europe'][:year] %>)
                  </p>
                </div>
              <% 
                  end
                rescue => e
                  # Silently fail if data not available
                end
              %>
            <% end %>
        </div>
      </div>
      
      <% unless compact_view %>
        <div class="text-center">
          <div class="inline-flex items-center px-6 py-3 backdrop-blur-sm bg-white/70 rounded-3xl shadow-lg border border-white/20">
            <svg class="w-5 h-5 mr-2 text-<%= bg_color %>-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-slate-700 font-medium">
              This provides a comprehensive comparison with USA, China, and India
            </span>
          </div>
        </div>
      <% else %>
        <div class="text-center mt-6">
          <%= link_to methodology_path, class: "inline-flex items-center px-5 py-2.5 bg-#{bg_color}-600 hover:bg-#{bg_color}-700 text-white rounded-xl font-semibold transition-all duration-200 shadow-lg hover:shadow-xl" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Learn More About Our Methodology
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>
